@model ProjectShopASP.Models.CATEGORY

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listType = (List<ProjectShopASP.Models.type_cate>)ViewBag.TypeCate;
    }

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-no-gutter">
            <li class="breadcrumb-item active" aria-current="page"><a href="/Admin/Category/Index">Danh mục</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm mới Danh mục</li>
        </ol>
    </nav>
    @section header{
        Thêm mới Danh mục sản phẩm
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nhập thông tin danh mục.
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">

                            @using (Html.BeginForm("Create", "Category", FormMethod.Post))
                            {
                                <div class="form-horizontal">
                                    <h4>CATEGORY</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.name_cate, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.name_cate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.name_cate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.type_cate, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.type_cate, new SelectList(listType, "idtype", "nametype"), "Chọn loại danh mục", htmlAttributes: new { @class = "form-control",@style="width:250px" })
                                            @Html.ValidationMessageFor(model => model.type_cate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Create" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


