@model IEnumerable<ProjectShopASP.Models.CATEGORY>
@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-no-gutter">
        <li class="breadcrumb-item active" aria-current="page">Danh mục</li>
    </ol>
</nav>
@section header{
    Danh mục sản phẩm
}
@section jsFooter{
    <script src="/Assets/admin/js/controller/userController.js"></script>
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <a class="btn btn-primary" href="/Admin/Category/Create">Thêm mới</a>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered mydatatable">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Name</th>
                                <th>Loại</th>
                                <th>link url</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{var stt = 1; string type = "";}
                            @foreach (var item in Model)
                            {

                                <tr id="row_@item.id_cate">
                                    <td>@stt</td>
                                    <td>@item.name_cate</td>
                                    @if(item.type_cate==1)
                                    {
                                        type = "Thời trang nam";
                                    }
                                    else
                                    {
                                        type = "Thời trang nữ";
                                    }
                                    <td>@type</td>
                                    <td>@item.link</td>
                                    <td>
                                        <a href="/Admin/Category/Edit/@item.id_cate">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.id_cate }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.id_cate + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

