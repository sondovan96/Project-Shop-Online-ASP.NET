@model IEnumerable<ProjectShopASP.Models.EMPLOYEE>
@{
    ViewBag.Title = "User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-no-gutter">
        <li class="breadcrumb-item active" aria-current="page">User</li>
    </ol>
</nav>
@section header{
    Danh sách người dùng
}
@section jsFooter{
    <script src="/Assets/admin/js/controller/userController.js"></script>
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <a class="btn btn-primary" href="/Admin/User/Create">Thêm mới</a>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered mydatatable">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Name</th>
                                <th>UserName</th>
                                <th>Password</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{var stt = 1; }
                            @foreach (var item in Model)
                            {

                                <tr id="row_@item.id_emp">
                                    <td>@stt</td>
                                    <td>@item.name_emp</td>
                                    <td>@item.user_name</td>
                                    <td>@item.password</td>
                                    <td>
                                        <a href="/Admin/User/Edit/@item.id_emp">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.id_emp }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       OnComplete = "$('#row_" + @item.id_emp + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
